<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="100.0" stylesheets="@../styles/bootstrap.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hminepos.controller.HomeController">
   <children>
      <HBox alignment="CENTER_RIGHT" spacing="20.0" style="-fx-background-color: #CCC;">
         <children>
            <Label fx:id="lbCurrentUser" text="User ID" />
            <StackPane style="-fx-border-color: #555; -fx-border-width: 2px;">
               <children>
                  <ImageView fx:id="ivCurrentUser" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/user.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="50.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <GridPane alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" VBox.vgrow="ALWAYS">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <VBox alignment="CENTER">
               <children>
                  <VBox alignment="CENTER" maxHeight="200.0" maxWidth="200.0" onMouseClicked="#handle_sales" spacing="20.0" styleClass="mao-style" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/sales.png" />
                           </image>
                        </ImageView>
                        <Label text="Sales" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="1">
               <children>
                  <VBox alignment="CENTER" maxHeight="200.0" maxWidth="200.0" onMouseClicked="#handle_purchases" spacing="20.0" styleClass="mao-style" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/purchases.png" />
                           </image>
                        </ImageView>
                        <Label text="Purchases" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="2">
               <children>
                  <VBox alignment="CENTER" maxHeight="200.0" maxWidth="200.0" onMouseClicked="#handle_customers" spacing="20.0" styleClass="mao-style" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/customers.png" />
                           </image>
                        </ImageView>
                        <Label text="Customers" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="3">
               <children>
                  <VBox alignment="CENTER" maxHeight="200.0" maxWidth="200.0" onMouseClicked="#handle_suppliers" spacing="20.0" styleClass="mao-style" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/suppliers.png" />
                           </image>
                        </ImageView>
                        <Label text="Suppliers" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.rowIndex="1">
               <children>
                  <VBox alignment="CENTER" maxHeight="200.0" maxWidth="200.0" onMouseClicked="#handle_products" spacing="20.0" styleClass="mao-style" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/items.png" />
                           </image>
                        </ImageView>
                        <Label text="Products" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <VBox alignment="CENTER" maxHeight="200.0" maxWidth="200.0" onMouseClicked="#handle_users" spacing="20.0" styleClass="mao-style" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/users.png" />
                           </image>
                        </ImageView>
                        <Label text="Users" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <children>
                  <VBox alignment="CENTER" maxHeight="200.0" maxWidth="200.0" onMouseClicked="#handle_history" spacing="20.0" styleClass="mao-style" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/history.png" />
                           </image>
                        </ImageView>
                        <Label text="History" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets left="200.0" right="200.0" />
         </padding>
      </GridPane>
   </children>
</VBox>
